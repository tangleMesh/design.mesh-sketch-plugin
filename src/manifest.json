{
  "$schema": "https://raw.githubusercontent.com/sketch-hq/SketchAPI/develop/docs/sketch-plugin-manifest-schema.json",
  "icon": "icon.png",
  "commands": [
    {
      "name": "üîÑ Synchronize this document",
      "identifier": "design.mesh-sketch-plugin.synchronize-document",
      "script": "./synchronizer.js",
      "handlers": {
        "run": "documentSaved",
        "actions": {
          "DocumentSaved": "documentSaved"
        }
      }
    },
    {
      "name": "document opened",
      "identifier": "design.mesh-sketch-plugin.document opened",
      "script": "./synchronizer.js",
      "handlers": {
        "actions": {
          "OpenDocument": "documentOpened"
        }
      }
    },
    {
      "name": "‚èØ Enable synchronization for this document",
      "identifier": "design.mesh-sketch-plugin.enable-synchronnization",
      "script": "./synchronizer.js",
      "handler": "enableDocumentSync"
    },
    {
      "name": "‚èπ Disable synchronization for this document",
      "identifier": "design.mesh-sketch-plugin.disable-synchronnization",
      "script": "./synchronizer.js",
      "handler": "disableDocumentSync"
    },
    {
      "name": "üîë remove credentials",
      "identifier": "design.mesh-sketch-plugin.remove-credentials",
      "script": "./credentials.js",
      "handler": "removeCredentials"
    },
    {
      "name": "üîê add credentials",
      "identifier": "design.mesh-sketch-plugin.add-credentials",
      "script": "./credentials.js",
      "handler": "addCredentials"
    }
  ],
  "menu": {
    "title": "design.mesh-sketch-plugin",
    "items": [
      {
        "title": "Synchronization",
        "items": [
          "design.mesh-sketch-plugin.synchronize-document",
          "design.mesh-sketch-plugin.enable-synchronnization",
          "design.mesh-sketch-plugin.disable-synchronnization"
        ]
      },
      "-",
      {
        "title": "Authentication",
        "items": [
          "design.mesh-sketch-plugin.add-credentials",
          "design.mesh-sketch-plugin.remove-credentials"
        ]
      }
    ]
  }
}